FROM tjpcrprod.azurecr.io/temurin.jre21.jammy:2023-10-24

RUN apt update > /dev/null 2>&1 && \
  apt -y install jq ca-certificates curl apt-transport-https lsb-release gnupg > /dev/null 2>&1 && \
  curl -sL https://aka.ms/InstallAzureCLIDeb | bash && \
  apt-get -y install zip unzip && \
  apt autoremove -y && \
  apt clean && \
  rm -rf /var/lib/apt/lists/*

# install application insights
RUN mkdir /code

WORKDIR /code

COPY target/resesok-otp-*-shaded.jar /code/otp-shaded.jar
COPY docker-build/docker/services/ /code

RUN curl -LO https://github.com/microsoft/ApplicationInsights-Java/releases/download/3.4.7/applicationinsights-agent-3.4.7.jar
RUN mv applicationinsights-agent-3.4.7.jar /code/appInsights/applicationinsights-agent.jar

RUN chmod a+x /code/*.sh

EXPOSE 8080

COPY docker-build/docker/scuttle/scuttle /bin/scuttle
ENV ENVOY_ADMIN_API="http://127.0.0.1:15000"
ENV ISTIO_QUIT_API="http://127.0.0.1:15020"
ENV APPLICATIONINSIGHTS_ROLE_NAME="OpenTripPlanner"
ENTRYPOINT ["scuttle", "bash", "/code/entrypoint.sh"]
